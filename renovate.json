{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "flux": {
    "managerFilePatterns": ["/^clusters/.*\\.yaml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "automergeStrategy": "squash",
  "ignoreTests": true,
  "packageRules": [
    {
      "description": "Automerge all patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
